@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">

    <!-- Back Button -->
    <div class="d-flex align-items-center mb-4">
        <button onclick="history.back()" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back
        </button>
        <h3 class="fw-bold mb-0 ms-3">Reports</h3>
    </div>

    <!-- Report Content -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h5 class="fw-bold">Device Usage Report</h5>
            <p class="text-muted">Here you can view and download reports of device activities, analytics, and IoT status.</p>

            <div class="mt-3">
                <button class="btn btn-primary me-2">
                    <i class="bi bi-download me-1"></i> Download PDF
                </button>
                <button class="btn btn-success">
                    <i class="bi bi-download me-1"></i> Download Excel
                </button>
            </div>
        </div>
    </div>
</div>
